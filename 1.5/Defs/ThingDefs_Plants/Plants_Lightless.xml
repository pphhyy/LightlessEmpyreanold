  <!--====================================== Bushes ======================================== -->

  <ThingDef ParentName="PlantBase">
    <defName>pphhyy_LightlessEmpyrean_BerryBush</defName>
    <label>lightless berry bush</label>
    <description>A bushy wild plant which yields delicious berries. Berries can be cooked, but they're also good to eat even when raw.</description>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <Nutrition>0.50</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Plants/pphhyy_Lightless_BerryBush</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.55, 0.2, 0.2)</volume>
        <offset>(0,0,-0.25)</offset>
      </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <neverMultiSelect>false</neverMultiSelect>
    <fillPercent>0.20</fillPercent>
    <pathCost>30</pathCost>
    <plant>
      <fertilityMin>0.5</fertilityMin>
      <fertilitySensitivity>0.5</fertilitySensitivity>
      <growDays>6</growDays>
      <leaflessGraphicPath>Things/Plant/BerryPlant_Leafless</leaflessGraphicPath>
      <immatureGraphicPath>Plants/pphhyy_Lightless_BerryBush_Immature</immatureGraphicPath>
      <harvestYield>10</harvestYield>
      <harvestWork>250</harvestWork>
      <harvestTag>Standard</harvestTag>
      <harvestAfterGrowth>0.30</harvestAfterGrowth>
      <harvestedThingDef>RawBerries</harvestedThingDef>
      <wildClusterRadius>5</wildClusterRadius>
      <wildClusterWeight>250</wildClusterWeight>
      <visualSizeRange>0.95~1.7</visualSizeRange>
      <topWindExposure>0.3</topWindExposure>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
    <defName>pphhyy_LightlessEmpyrean_Ethereal</defName>
    <label>ethereal</label>
    <description>A mid-size crop that yields fine teal cotton fibers. These are used to make ethereal cloth.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Plants/pphhyy_Lightless_Ethereal</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <growDays>8</growDays>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>pphhyy_LightlessEmpyrean_EtherealCloth</harvestedThingDef>
      <harvestYield>10</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~1.05</visualSizeRange>
      <wildOrder>2</wildOrder>
    </plant>
  </ThingDef>

  <ThingDef ParentName="BushBase">
    <defName>pphhyy_LightlessEmpyrean_BulbBush</defName>
    <label>lightless bulb bush</label>
    <description>Bioluminescent Bush</description>
    <statBases>
      <Beauty>2</Beauty>
      <BeautyOutdoors>2</BeautyOutdoors>
    </statBases>
    <graphicData>
      <texPath>Plants/pphhyy_Lightless_BulbBush</texPath>
      <drawSize>1.1</drawSize>
      <shadowData>
        <volume>(0.3, 0.2, 0.15)</volume>
        <offset>(0,0,-0.1)</offset>
      </shadowData>
    </graphicData>
    <plant>
      <wildClusterRadius>3</wildClusterRadius>
      <wildClusterWeight>4</wildClusterWeight>
    </plant>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>2.5</glowRadius>
        <glowColor>(119,151,152,0)</glowColor>
      </li>
    </comps>
  </ThingDef>

